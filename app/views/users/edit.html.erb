<h2>User info</h2>

<%= form_for(@user) do |f| %>
  <%if @user.errors.any? %>
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  <div class="field">
    <h4>Name</h4>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <h4>Image</h4>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="field">
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit "Update User" %>

<% end %>
